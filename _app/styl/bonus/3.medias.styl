@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	.contact
		font-size: 18px
	.main-title
	.remind-main-title
		margin-top: 100px
	.main-title.main-title-confirm
		margin-top: 0
@media screen and (max-width 1199px)
	header
		padding 15px 0
	.header-logo
		width 100px
		height 44px
		float: none
		margin 0 auto 3px
		display block
	.contacts
		text-align: center
		float: none
	.contact
		line-height: 1.3
		background-size: contain
		background-position: center left
	.contact.contact-email
	.contact.contact-skype
	.contact.contact-tel
		padding-left: 30px
		margin-left: 8px
	.contact.contact-email
		padding-left: 35px
	.about-item
		background-position: bottom right -350px
		background-size: auto
	#feedback
		min-height 572px
@media screen and (max-width 991px)
	.remind-main-title
		margin-top: 20px
	.mail-img
		width 100%
	.about-item
		padding 30px
		background-image: none
@media screen and (max-width 767px)
	#vk
		margin-bottom: 25px
@media screen and (max-width 485px)
	.pre
		font-size: 18px
	header
		padding 10px 0
		margin-bottom: 20px
	#main
		padding 0 0 40px
	.header-logo
		width 60px
		height 31px
	.contact
		font-size: 12px
		line-height: 16px
		background-size contain
	.contact.contact-email
	.contact.contact-skype
	.contact.contact-tel
		padding-left: 22px
	.main-title
		font-size: 26px
		line-height: 1.3
		a
			font-size: 32px
	.main-title.main-title-confirm
		font-size: 22px
		margin-bottom: 15px
	.main-info
		margin-top: 5px
	.remind-main-title
		margin-bottom: 20px
	.main-subtitle
	.remind-main-subtitle
		font-size: 20px
	.remind-main-subtitle
		line-height: 1.2
	.main-subtitle
		margin 10px 0 15px
	.main-title.main-title-confirm + h2
		font-size: 20px
	.main-subtitle.main-subtitle-confirm
		font-size: 18px
		margin 15px 0
	.mail-cell
		width 50%
	.mail-img
		height 100px
		width auto
	.confirm-text
		font-size: 18px
	footer
		padding 15px 0
		font-size: 12px
		h5
			font-size: 16px
		p
			font-size: 12px
	.soc-buttons a
		margin 10px 5px
	.main-text
		margin-top: 15px
	#feedback
		padding 40px 0
	.general-title
		font-size: 26px
		margin-bottom: 30px
@media screen and (max-width 385px)
	.remind-main-title
	.main-title.main-title-confirm
		font-size: 20px
	.remind-main-subtitle
	.about-item-title
		font-size: 18px
	.mail-img
		height 60px
	.description
	.about-item
		padding 15px
	.about-item-list
		margin-left: 15px
	.main-info
		font-size: 20px
		margin-top: 15px
		line-height: 1.3
		span
			padding 5px
			font-size: 22px
	.video-wrapper-main
		margin-top: 20px
	.general-title
		font-size: 22px