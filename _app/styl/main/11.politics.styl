.modal-backdrop.in
	opacity .8
.modal-content
	border-radius: 0
	border: 0
.modal-dialog
	width 684px
button.close
	position: absolute
	font-size: 20px
	text-align: center
	background-color transparent
	top 10px
	right 10px
	font-family: PN
	border-radius: 50px
	border: 1px solid P
	color P
	opacity 1
	width 24px
	padding 1px 0 0
	z-index 99
	transition: all .3s ease
	&:hover
		opacity .5
		transform: rotate(45deg)
.modal-title
	text-align: center
	font-size: 20px
	text-transform: uppercase
	width 88%
	margin 0 auto 20px
.politics-modal-content
	.modal-title
		font-family: PNBd
		font-size: 28px
		width 88%
		line-height: 1.3
		margin 0
		text-align: left 
		small
			font-family:  PN
			font-size: initial
	p
		margin-bottom: 10px
		&:last-of-type
			margin-bottom: 0