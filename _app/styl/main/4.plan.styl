#plan
	padding 50px 0 0
.day
	padding 30px 80px 30px 30px
	box-shadow: 0 4px 14px 2px rgba(#000,.51)
	background-color #fff
	background-repeat no-repeat
	background-position: center right -200px
	background-size cover
	margin-bottom: 25px
	&-1
		background-image url(../img/backs/day-bg-1.png)
		position relative
		margin-top: 100px
		&:before
			content: ''
			display block
			position: absolute
			z-index -1
			top -100px
			right 70px
			background-image url(../img/images/plan-stone-1.png)
			background-repeat no-repeat
			background-position: center
			background-size contain
			width 158px
			height 152px
	&-2
		background-image url(../img/backs/day-bg-2.png)
		position relative
		&:before
			content: ''
			display block
			position: absolute
			z-index -1
			bottom: -75px
			left 100px
			background-image url(../img/images/plan-stone-2.png)
			background-repeat no-repeat
			background-position: center
			background-size contain
			width 167px
			height 118px
	&-3
		background-image url(../img/backs/day-bg-3.png)
	&-4
		margin-top: 340px
		background-image url(../img/backs/day-bg-4.png)
	&-5
		background-image url(../img/backs/day-bg-5.png)
		background-position: center right -150px
	&-title
		font-size: 25px
		font-family: PNBk
		margin-bottom: 30px
		text-transform: uppercase
	&-list
		margin-bottom: 25px
		li
			list-style none
			margin-bottom: 5px
	&-bonus-title
		font-size: 18px
		font-family: PNBk
		text-transform: uppercase
		margin-bottom: 5px
.button-plan
	margin-top: 20px