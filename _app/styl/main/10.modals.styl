.input-mail-modal
	display block
	max-width 260px
	margin: 0 auto 5px
.button.button-modal
	width 100%
	max-width 260px
.checking-modal .check-label
	line-height: 20px
.mail-modal-content
	.modal-body
		overflow hidden
		padding 0
.modal-col
	width 50%
	float left
	padding 30px
	&:first-of-type
		background-color: #E3D3C7
		background-image url(../img/backs/modal-bg.jpg)
		background-repeat no-repeat
		background-position: center
		background-size: cover
.modal-main-title
	font-size: 40px
	font-family: PNBk
	color P
	text-transform: uppercase
	text-shadow 0 0 10px rgba(#fff,.8)
.modal-main-subtitle
	font-size: 20px
	font-family: PNBk
	color P
	text-transform: uppercase
	text-shadow 0 0 10px rgba(#fff,.8)
	margin 30px 0
.modal-main-info-text
	font-family: PNBk
	color P
	text-shadow 0 0 10px rgba(#fff,.8)
	&&:last-of-type
		margin-top: 20px
	span
		display: inline-block
		color #000
		font-family: PN