#for
	padding 50px 0 0
.general-title-for
	max-width 820px
	margin-left: auto
	margin-right: auto
.for-item
	width 100%
	max-width 270px
	margin 0 auto 30px
	background-color: rgba(#fff,.98)
	box-shadow: 0 4px 24px 2px rgba(#000,.49)
	padding 165px 15px 15px
	background-repeat no-repeat
	background-position: top center
	background-size: auto 160px
	text-align: center
	min-height 345px
	&-1
		background-image url('../img/images/for-img-1.jpg')
	&-2
		background-image url('../img/images/for-img-2.jpg')
	&-3
		background-image url('../img/images/for-img-3.jpg')
	&-4
		background-image url('../img/images/for-img-4.jpg')
		position relative
		&:before
			content ''
			display: block
			position: absolute
			background-image url('../img/images/for-stone-1.png')
			background-repeat no-repeat
			background-position: center
			background-size contain
			width 185px
			height 133px
			top -95px
			right 0
			z-index -1
	&-5
		background-image url('../img/images/for-img-5.jpg')
		position relative
		&:before
			content ''
			display: block
			position: absolute
			background-image url('../img/images/for-stone-2.png')
			background-repeat no-repeat
			background-position: center
			width 189px
			height 120px
			bottom -73px
			left -34px
			z-index -1
	&-6
		background-image url('../img/images/for-img-6.jpg')
	&-7
		background-image url('../img/images/for-img-7.jpg')
	&-8
		background-image url('../img/images/for-img-8.jpg')
	&-info
		display: flex
		align-items: center
		flex-direction: column
		justify-content: space-around
		height 165px
		&-title
			font-size: 16px
			font-family: PNBk
			margin-bottom: 5px
		&-text
			font-size: 16px
.button-for
	margin-top: 10px