*
	margin 0
	padding 0
	outline none
body
	font-size: 16px
	font-family: PN
	color #000
	background-color #fff
	line-height: .1.5
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 0
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
.general-title
	text-align: center
	color #5c145d
	font-size: 30px
	font-family: PNBk
	text-transform: uppercase
	margin-bottom: 40px
	line-height: 1.15
.button
	display block
	text-align: center
	margin 0 auto
	border-radius: 5px
	background-color: #5c145d
	color #fff
	text-transform: uppercase
	font-family: PNBd
	width 100%
	transition: all .4s ease
	&-wrapper
		position relative
		&:before
			content ''
			display block
			border-radius: 5px
			width 302px
			height 30px
			background-color: #350936
			bottom: -3px
			left 0
			right 0
			margin 0 auto
			position: absolute
			z-index 0
			transition: all .4s ease
	&&-1
		box-shadow: 0px 4px 11.83px 1.17px rgba(0, 0, 0, 0.61);
		max-width 311px
		padding 32px 10px
		position relative
		z-index 12
		&:focus
			color #fff
		&:hover
			color #fff
			box-shadow: 0px 2px 5px 1px rgba(0, 0, 0, 0.6);
			transform: translateY(3px)
			.button-wrapper:before
				bottom 0
	&&-form
		height 55px
		line-height: 55px
		max-width 190px
		&:hover
			background-color: #350936 + 20%
			transform: translateY(-2px)