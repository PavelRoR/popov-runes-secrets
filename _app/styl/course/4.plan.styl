#plan
	padding 50px 0 0
.module
	padding 20px
	box-shadow: 0 4px 14px 2px rgba(#000,.51)
	background-color #fff
	background-repeat no-repeat
	background-position: center right -200px
	background-size cover
	margin-bottom: 40px
	position relative
	.col-md-7.col-sm-6
		border-right: 1px solid rgba(P,.5)
	&-1
		background-image linear-gradient(to top, rgba(#fff,.7), rgba(#fff,.7)),url(../img/backs/day-bg-1.png)
		&:before
			content: ''
			display block
			position: absolute
			z-index -1
			top -100px
			right 70px
			background-image url(../img/images/plan-stone-1.png)
			background-repeat no-repeat
			background-position: center
			background-size contain
			width 158px
			height 152px
	&-2
		background-image linear-gradient(to top, rgba(#fff,.7), rgba(#fff,.7)),url(../img/backs/day-bg-2.png)
	&-3
		background-image linear-gradient(to top, rgba(#fff,.75), rgba(#fff,.75)),url(../img/backs/day-bg-3.png)
		&:before
			content: ''
			display block
			position: absolute
			z-index -1
			bottom: -75px
			left 100px
			background-image url(../img/images/plan-stone-2.png)
			background-repeat no-repeat
			background-position: center
			background-size contain
			width 167px
			height 118px
	&-title
		font-size: 22px
		font-family: PNBk
		margin-bottom: 10px
		text-transform: uppercase
		color: P
	&-subtitle
		font-size: 20px
		font-family: PNBd
		margin-bottom: 15px
	&-results-title
		font-size: 20px
		font-family: PNBk
		margin-bottom: 10px
		text-transform: uppercase
		color: P
		small
			display: block
			color #000
			font-size: 18px
			font-family: PNBd
			text-transform: none
	&-list
		margin-left: 30px
		li
			margin  0 0px 10px 0
			color: P
			font-family: PNBk
			font-size: 20px
			line-height: 18px
			span
				font-size: 16px
				font-family: PN
				color #000
			&:last-child
				margin-bottom: 0
	&-results-list
		margin-left: 10px
		li
			position relative
			list-style none
			margin  0 10px 15px 0
			padding-left: 18px
			&:before
				content: ''
				display: block
				position: absolute
				top 6px
				left 0
				border-radius: 50px
				width 9px
				height 9px
				background-color: P
#technics
	padding 80px 0 0
.technic
	padding 220px 20px 20px
	background-repeat no-repeat
	background-position top center
	background-size auto 200px
	display table
	width 100%
	max-width 360px
	margin 0 auto 40px
	height 355px
	background-color:rgba(255,255,255,0.98);
	box-shadow: 0 4px 24px 2px rgba(0,0,0,0.49);
	&-1
		background-image url(../img/images/technic-img-1.jpg)
	&-2
		background-image url(../img/images/technic-img-2.jpg)
	&-3
		background-image url(../img/images/technic-img-3.jpg)
	&-4
		background-image url(../img/images/technic-img-4.jpg)
	&-5
		background-image url(../img/images/technic-img-5.jpg)
	&-6
		background-image url(../img/images/technic-img-6.jpg)
	&-text
		text-align center
		display table-cell
		vertical-align middle
		font-family PNBd