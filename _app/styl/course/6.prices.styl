#prices
	padding 50px 0
	background-color: #965C27
	background-image url(../img/backs/prices-bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
.general-title-prices
	text-shadow: 0 0 2px #fff,0 0 5px #fff,0 0 10px #fff,0 0 15px #fff,0 0 20px #fff
.packet
	background-color: rgba(#f5e2d9,.96)
	box-shadow: 0 0 10px 5px rgba(#f5e2d9,.6)
	padding 20px 20px 30px
	border: 1px solid P
	text-align: center
	width 100%
	max-width 380px
	margin 0 auto 25px
	&-head
		padding 0 0 20px
		&-title
			font-size: 24px
			font-family: PNBk
			color P
			text-transform: uppercase
			small
				font-size: 16px
				font-family: PNBd
				display: block
				text-transform: none
	&-body
		padding 20px 0
		border-top: 1px solid rgba(P,.56)
		border-bottom: 1px solid rgba(P,.56)
		min-height 195px
		&-title
			font-size: 20px
			font-family: PNBd
			line-height: 1.3
	&-footer
		padding 20px 0 0
.more-button
	display: inline-block
	color rgba(P,.5)
	cursor pointer
	border-bottom: 1px dashed
	font-size: 16px
	transition: all .2s ease
	&:hover
		border-bottom-color: transparent
.cost
	font-size: 22px
	font-size: PNBd
	margin-bottom: 12px
	span
		display: block
		font-size: 32px
		font-family: PNBk
		text-transform: uppercase
	&-full
		span
			text-decoration: line-through
			.unbroken
				text-decoration: none
	&-sale
		color red
	&-today
		color green
.prepayment
	text-align: center
	&-title
		font-size: 36px
		font-family: PNBk
		color red
		text-transform: uppercase
		text-shadow: 0 0 2px #fff,0 0 5px #fff,0 0 10px #fff,0 0 15px #fff,0 0 20px #fff
	&-text
		color #000
		font-size: 20px
		font-family: PNBd
		margin 10px 0 30px
		text-shadow: 0 0 2px #fff,0 0 5px #fff,0 0 10px #fff,0 0 15px #fff,0 0 20px #fff
.timer-title
	line-height: 1.3
	font-size: 30px
	font-family: PNBk
	color red
	text-transform: uppercase
	text-shadow: 0 0 2px #fff,0 0 5px #fff,0 0 10px #fff,0 0 15px #fff,0 0 20px #fff
	text-align: center
	margin-top: 40px
.flip-clock-wrapper
	width: 100%
	max-width 460px
	margin-top: 25px
.flip-clock-divider .flip-clock-label
	color #fff
.flip-clock-dot
	background-color: #fff
.flip-clock-wrapper ul li a div div.inn
	color: #000
	background-color: #f5e2d9
	text-shadow: 2px 2px 2px rgba(#022a37,.6);