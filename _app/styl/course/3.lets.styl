#lets
#features
	padding 50px 0 70px
.lets-item
.features-item
	position relative
	padding-top: 50px
	&-img
		position: absolute
		top: 0
		right: 100px
		z-index -1
.lets-item-img
.features-item-img
	right: 50px
.lets-info
.features-info
	padding 40px 55px
	background-color: rgba(#fff,.9)
	box-shadow: 0px 4px 26.68px 2.32px rgba(0, 0, 0, 0.49);
	width 100%
	max-width 770px
	margin-left: 50px
	&-list
		li
			margin-bottom: 10px
			font-family: PNBk
			color P
			&:last-of-type
				margin-bottom: 0
			span
				color #000
				font-family: PN
.features-info
	max-width 670px
.button-lets
.button-features
	margin-top: 50px