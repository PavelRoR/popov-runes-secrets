#main
	padding 0 0 50px
	background-color: #E3D3C7
	background-image url(../img/backs/main-bg.jpg)
	background-repeat no-repeat
	background-position: center left
	background-size: cover
	overflow hidden
	text-align: center
.main-title
	color P
	font-size: 60px
	font-family: PNBk
	line-height: 1.3
	text-transform: uppercase
	text-shadow: 0 0 2px #fff,0 0 5px #fff,0 0 10px #fff,0 0 15px #fff,0 0 20px #fff
	margin-bottom: 40px
	small
		display: block
		font-size: 18px
		font-family: PNBk
		text-transform: lowercase
.pre
	font-size: 20px
	font-family: PNBd
	color P
	text-transform: lowercase
	margin-bottom: 20px
	text-shadow: 0 0 2px #fff,0 0 5px #fff,0 0 10px #fff,0 0 15px #fff,0 0 20px #fff
.main-info
	color P
	font-family: PNBd
	text-shadow: 0 0 2px #fff,0 0 5px #fff,0 0 10px #fff,0 0 15px #fff,0 0 20px #fff
	font-size: 20px
	span
		font-size: 22px
		font-family: PNBk
		display: inline-block
		color #000
		text-transform: uppercase
	&:last-of-type
		margin 20px 0 50px